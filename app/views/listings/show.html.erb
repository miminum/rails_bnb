<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Street address:</strong>
  <%= @listing.street_address %>
</p>

<p>
  <strong>City:</strong>
  <%= @listing.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @listing.country.name %>
</p>

<p>
  <strong>Coords:</strong>
  <%= @listing.latitude %>, <%= @listing.longitude %>
</p>

<p>
  <strong>Bed count:</strong>
  <%= @listing.bed_count %>
</p>

<p>
  <strong>Bedroom count:</strong>
  <%= @listing.bedroom_count %>
</p>

<p>
  <strong>Bathroom count:</strong>
  <%= @listing.bathroom_count %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Night fee cents:</strong>
  <%= format_cents(@listing.night_fee_cents) %>
  <%= format_cents_for_country @listing.night_fee_cents, @listing.country %>
</p>

<p>
  <strong>Cleaning fee cents:</strong>
  <%= format_cents(@listing.cleaning_fee_cents) %>
  <%= format_cents_for_country @listing.cleaning_fee_cents, @listing.country %>
</p>

<p>
  <strong>Host id:</strong>
  <%= @listing.host_id %>
  <%= current_user.id %>
</p>

<%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-primary'%> 
<%= link_to 'Back', listings_path, class: 'btn btn-primary'%>
<%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: @listing.host_id), method: 'post'%>
